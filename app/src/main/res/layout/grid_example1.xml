<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="7"

    >

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@android:color/holo_green_dark"
        android:drawableTop="@drawable/bag"
        android:text="lmao"
        />

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@android:color/holo_orange_light"
        android:drawableTop="@drawable/clarinet"
        android:text="ayyyyyy"
        />

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:background="@android:color/holo_red_dark"
        android:drawableTop="@drawable/cycle"
        android:text="just a human riding a bike"
        />

    <Button
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@android:color/holo_orange_dark"
        android:drawableTop="@drawable/fork"
        android:text="fork"
        />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@android:color/darker_gray"
        android:drawableTop="@drawable/head1"
        android:text="Head 1"/>

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@android:color/holo_blue_dark"
        android:drawableTop="@drawable/head2"
        android:text="Head 2"/>
    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="3"
        android:layout_rowSpan="3"
        android:background="@android:color/holo_red_dark"
        android:drawableTop="@drawable/levoiture"
        android:text="Limousine"/>
    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="3"
        android:layout_rowSpan="3"
        android:background="@android:color/holo_purple"
        android:drawableTop="@drawable/mask"
        android:text="A Mask"
        />
    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@android:color/holo_green_dark"
        android:drawableTop="@drawable/pizza"
        android:text="SO FAT!!!!!"/>


</GridLayout>